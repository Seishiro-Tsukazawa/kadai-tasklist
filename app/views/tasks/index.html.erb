<% if logged_in? %>
    <h1>タスク一覧</h1>

    <ol>
        <% @tasks.each do |task| %>
            <li><%= link_to task.status, task %> : <%= task.content %></li>
        <% end %>
    </ol>

    <li><%= link_to 'タスクを追加する', new_task_path %></li>
    <li><%= link_to 'Logout', logout_path, method: :delete %></li>
<% else %>
    <h1>ようこそ、タスク管理アプリへ</h1>
    <%= link_to 'sign up', signup_path %>
    <%= link_to 'log in', login_path %>
<% end %>